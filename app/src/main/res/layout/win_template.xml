<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--TODO:aici sa fie jos ceva decor pe fundal!!!!!-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congrats! You got x points!"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="New level unlocked!"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nextLevel"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bkg"
        android:text="Next level"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nextLevel"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-91dp"
        android:background="@drawable/btn_bkg"
        android:text="Main Menu"
        android:textSize="20sp" />

</RelativeLayout>